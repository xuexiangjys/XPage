<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--标题栏的背景颜色-->
    <attr name="xpage_actionbar_color" format="color"/>
    <!--标题栏的背景图片，优先使用背景图片，没有背景图片才使用背景颜色，可选-->
    <attr name="xpage_actionbar_background" format="reference" />
    <!--是否支持沉浸式标题栏-->
    <attr name="xpage_actionbar_immersive" format="boolean" />
    <!--标题栏返回箭头-->
    <attr name="xpage_actionbar_navigation_back" format="reference" />
    <!--标题栏的高度-->
    <attr name="xpage_actionbar_height" format="dimension"/>
    <!--标题栏标题文字的大小-->
    <attr name="xpage_actionbar_title_text_size" format="dimension"/>
    <!--标题栏副标题文字的大小-->
    <attr name="xpage_actionbar_sub_text_size" format="dimension"/>
    <!--标题栏动作文字的大小-->
    <attr name="xpage_actionbar_action_text_size" format="dimension"/>
    <!--标题栏动作图片的padding-->
    <attr name="xpage_actionbar_action_padding" format="dimension"/>
    <!--标题栏两侧文字的padding-->
    <attr name="xpage_actionbar_side_text_padding" format="dimension"/>
    <!--标题栏文字的颜色-->
    <attr name="xpage_actionbar_text_color" format="color"/>

    <declare-styleable name="TitleBar">
        <!--标题栏的高度，默认52dp-->
        <attr name="tb_barHeight" format="dimension" />
        <!--是否是沉浸式标题栏，默认是false-->
        <attr name="tb_immersive" format="boolean" />
        <!--左右图标和文字的padding-->
        <attr name="tb_actionPadding" format="dimension" />
        <!--标题栏两侧控件的padding-->
        <attr name="tb_sideTextPadding" format="dimension" />
        <!--标题栏左侧文字的颜色-->
        <attr name="tb_sideTextColor" format="color" />
        <!--标题栏标题文字的颜色-->
        <attr name="tb_titleTextColor" format="color" />
        <!--标题栏副标题文字的颜色-->
        <attr name="tb_subTitleTextColor" format="color" />
        <!---标题栏右侧文字的颜色-->
        <attr name="tb_actionTextColor" format="color" />
        <!--中间title的对齐方式-->
        <attr name="tb_centerGravity" format="enum">
            <enum name="center" value="0" />
            <enum name="left" value="1" />
            <enum name="right" value="2" />
        </attr>
        <!--标题栏左侧文字的大小-->
        <attr name="tb_sideTextSize" format="dimension" />
        <!--标题栏标题文字的大小-->
        <attr name="tb_titleTextSize" format="dimension" />
        <!--标题栏副标题文字的大小-->
        <attr name="tb_subTitleTextSize" format="dimension" />
        <!--标题栏右侧文字的大小-->
        <attr name="tb_actionTextSize" format="dimension" />
        <!--文字的内容以及图标内容-->
        <attr name="tb_leftImageResource" format="reference" />
        <!--标题栏左侧的文字-->
        <attr name="tb_leftText" format="string" />
        <!--标题栏标题的文字-->
        <attr name="tb_titleText" format="string" />
        <!--标题栏副标题的文字-->
        <attr name="tb_subTitleText" format="string" />
        <!--标题栏分割线的颜色-->
        <attr name="tb_dividerColor" format="color" />
        <!--标题栏分割线的高度-->
        <attr name="tb_dividerHeight" format="dimension" />
        <!--标题栏背景色是否使用主题颜色，默认是true-->
        <attr name="tb_useThemeColor" format="boolean" />
    </declare-styleable>
    <attr name="XPageTitleBarStyle" format="reference" />

</resources>